<div id="listing">
  <h4 class="modal-title"><%= listing.title %></h4>

  <div class="row">
    <div class="col col-12">
      <div class="listing-img">
        <img src="<%= listing.list_img %>">
      </div>
    </div>

    <div class="col col-12">
      <div class="listing-category">
        <span class="badge secondary"><%= listing.category %></span>
      </div>
    </div>

    <div class="col col-12">
      <div class="listing-desc">
        <%= listing.description %>
      </div>
    </div>

    <div class="col col-12">
      <div class="listing-price text-danger">
        <%= listing.price %>
      </div>
    </div>
  </div>
</div>

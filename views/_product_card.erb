<div class="border card">
  <div class="img-wrapper">
    <img class="product-img" src="<%= product.list_img %>" />
    <%= partial :fav_button, product: product, is_active: favs.key?(product.id) %>
  </div>

  <label class="card-body" for="modal-2" hx-get="/edit/<%= product.id %>" hx-target="#edit-product-modal" hx-swap="outerHTML">
    <div class="card-title">
      <%= product.title %>
    </div>

    <% if product.specs? %>
      <div class="card-text specs text-secondary">
        <% product.specs.each do |prop, value| %>
          <div class="spec-value" title="<%= prop %>">
            <%= value %>
          </div>
        <% end %>
      </div>
    <% end %>

    <% if product.tags? %>
      <div>
        <% product.tags do |tag| %>
          <div>tag</div>
        <% end %>
      </div>
    <% end%>

    <div class="text-danger">
      <%= product.price %>
    </div>
  </label>
</div>

<form hx-post="/update-account">
  <% if defined?(alert_type) %>
    <div class="alert alert-<%= alert_type %>"><%= message %></div>
  <% end %>

  <div class="row" style="align-items: center;">
    <div class="col col-10">
      <div class="form-group in-tabs">
        <label for="username">Nombre de usuario</label>
        <input class="input-block" type="text" id="username" name="username" value="<%= account.user.username %>" />
      </div>
    </div>

    <div class="col col-2 in-tabs" style="margin-top: 30px;">
      <button type="submit" class="paper-btn btn-block btn-secondary-outline">Actualizar!</button>
    </div>
  </div>
</form>

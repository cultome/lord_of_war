<form class="modal-text" hx-post="/event-add">
  <% if defined?(alert_type) %>
    <div class="alert alert-<%= alert_type %>"><%= message %></div>
  <% end %>

  <div class="row">
    <div class="col col-12 form-group">
      <label for="title">Titulo</label>
      <input class="input-block" type="text" id="title" name="title" value="<%= event.title %>" required>
    </div>
    <div class="col col-12 form-group">
      <label for="place_name">Nombre del lugar</label>
      <input class="input-block" type="text" id="place_name" name="place_name" value="<%= event.place_name %>">
    </div>
    <div class="col col-12 form-group">
      <label for="place_url">URL de Google Maps</label>
      <input class="input-block" type="text" id="place_url" name="place_url" value="<%= event.place_url %>">
    </div>

    <div class="col col-6 form-group">
      <label for="date">Fecha</label>
      <input class="input-block" type="date" id="date" name="date" value="<%= event.datetime&.strftime('%Y-%m-%d') %>" required>
    </div>
    <div class="col col-6 form-group">
      <label for="time">Hora</label>
      <input class="input-block" type="time" id="time" name="time" value="<%= event.datetime&.strftime('%H:%M') %>" required>
    </div>

    <div class="col col-12 form-group">
      <label for="desc">Descripcion</label>
      <textarea class="input-block" type="text" id="desc" rows="10" name="desc" value="<%= event.desc %>" rows="10"></textarea>
    </div>
  </div>

  <div class="btn-grp flex-spaces">
    <label for="modal-2" class="margin btn-block paper-btn btn-primary-outline">Cerrar</label>
    <button type="submit" class="btn-block paper-btn btn-secondary-outline">Registrar!</button>
  </div>
</form>
